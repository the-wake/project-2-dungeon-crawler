<h2>Add a new Creature</h2>

{{!-- TODO: Figure out how to get the room dropdown to display room names but submit room IDs. --}}

<div class="container">
  <form action="/api/creatures" method="POST">
    <div class="mb-3">

      <label for="creature-name" class="form-label">Creature Name</label>
      <input name="name" type="text" class="form-control" id="creature-name" aria-describedby="creature-name">
      <br>
      {{!-- <label for="creature-room" class="form-label">Current Room</label>
      <input name="in_room" type="text" class="form-control" id="creature-room" aria-describedby="creature-room"> --}}
      <select name="in_room" class="form-control" id="creature-room" aria-describedby="creature-room">
        <label for="in-room" class="form-label">In Room:</label>
        {{#each rooms as |room|}}
        <option value={{room.id}}>{{room.name}}</option>
        {{/each}}
        <option value="">(no room)</option>
      </select>
      <br>
      <label for="creature-HP" class="form-label">HP</label>
      <input name="hp" type="number" class="form-control" id="creature-hp" aria-describedby="creature-hp">
      <br>
      <label for="creature-loot" class="form-label">Loot</label>
      <textarea name="loot" class="form-control" id="creature-loot" aria-describedby="loot"></textarea>
      <br>
      <label for="key-npc" class="form-label">Key NPC?</label>
      <input name="key_npc" type="checkbox" class="form-check-input" value="1" id="key-npc">
      <br>
      <label for="is-alive" class="form-label">Is Alive?</label>
      <input name="is_alive" type="checkbox" class="form-check-input" value="1" id="is-alive"
        aria-describedby="is-alive" checked>

    </div>
    <button type="submit" class="btn btn-outline-dark">Submit</button>
  </form>
</div>


